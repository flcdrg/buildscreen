<Window x:Class="BuildScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserInterface="clr-namespace:BuildScreen.Core.UserInterface"
        Title="BuildScreen"
        Height="350" Width="525"
        MinHeight="350" MinWidth="525"
        ResizeMode="CanResizeWithGrip"
        Icon="/BuildScreen;component/App.ico"
        Loaded="OnLoaded"
        KeyDown="OnKeyDown">
    <Grid x:Name="MainGrid">
        <UniformGrid x:Name="UniformGridBuilds" Columns="1" Background="#FF4B4B4B" />
        <TextBlock x:Name="ShortcutsInfo" Foreground="White" Padding="0,5,9,0" HorizontalAlignment="Right" VerticalAlignment="Top" UserInterface:VisibilityAnimation.AnimationType="Fade">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.8" BlurRadius="4" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
