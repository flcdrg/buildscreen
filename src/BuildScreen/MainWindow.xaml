<Window x:Class="BuildScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BuildScreen"
        Height="350"
        Width="525"
        MinHeight="350"
        MinWidth="525"
        Icon="/BuildScreen;component/App.ico"
        KeyDown="MainWindow_KeyDown"
        Loaded="MainWindow_Loaded">
    <Grid Name="MainGrid" Background="#FFFFFFFF">
        <UniformGrid Name="UniformGridBuilds" Columns="1" Background="#FF4B4B4B" />
        <TextBlock Name="ShortcutsInfo" Foreground="White" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.8" BlurRadius="4" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
