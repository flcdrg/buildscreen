<Window x:Class="BuildScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:entities="clr-namespace:BuildScreen.ContinousIntegration.Entities"
        Title="BuildScreen"
        Height="350"
        Width="525"
        MinHeight="350"
        MinWidth="525"
        Icon="/BuildScreen;component/App.ico"
        KeyDown="MainWindow_KeyDown"
        Loaded="MainWindow_Loaded"
        x:Name="Window">
  <Window.Resources>
    <DataTemplate x:Key="BuildItemTemplate" DataType="{x:Type entities:Build}">
      <Grid Background="Blue">
        <TextBlock FontSize="40" Foreground="White" Text="{Binding ProjectName}" />
      </Grid>
    </DataTemplate>
  </Window.Resources>
  <Grid Name="MainGrid" Background="#212121">
    <ItemsControl ItemsSource="{Binding Builds, ElementName=Window}" ItemTemplate="{StaticResource BuildItemTemplate}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid IsItemsHost="True" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
    </ItemsControl>
    <TextBlock Name="ShortcutsInfo" Foreground="White" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
  </Grid>
</Window>
